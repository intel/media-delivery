diff --git a/configure b/configure
index 1f46142..26ee294 100755
--- a/configure
+++ b/configure
@@ -6411,12 +6411,18 @@ enabled liblensfun        && require_pkg_config liblensfun lensfun lensfun.h lf_
 # Media SDK or Intel Media Server Studio, these don't come with
